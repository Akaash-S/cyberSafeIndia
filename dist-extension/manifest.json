{
  "manifest_version": 3,
  "name": "CyberSafe India",
  "version": "1.0.0",
  "description": "Protect yourself from malicious URLs with real-time threat detection powered by CyberSafe India",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "notifications",
    "contextMenus",
    "alarms"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "https://cybersafeindiabackend-1.onrender.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "CyberSafe India - URL Security Scanner",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "css": ["content.css"]
    },
    {
      "matches": ["https://cybersafe-india.vercel.app/*"],
      "js": ["website-sync.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "popup.html", 
        "icons/*",
        "blocked.html",
        "auth.html",
        "content.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "options.html",
  "commands": {
    "scan-current-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Scan current page for threats"
    },
    "open-dashboard": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "Command+Shift+D"
      },
      "description": "Open CyberSafe India Dashboard"
    }
  }
}
